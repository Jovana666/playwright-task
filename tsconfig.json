{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@playwright/test"],
    "baseUrl": ".", 
    "paths": {
      "@pages/*": ["pages/*"]
    }
  },
  "include": ["tests/**/*.ts", "services/**/*.ts", "config/**/*.ts"]
}

